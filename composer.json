{
    "name": "keboola/retry",
    "description": "Library for repeatable and retryable operations",
    "keywords": ["proxy", "retry", "repeat", "backoff"],
    "license": "MIT",
    "authors": [
        {
            "name": "Keboola Dev",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "7.*",
        "keboola/coding-standard": "^7.0",
        "phpstan/phpstan": "^0.8"
    },
    "autoload": {
        "psr-4": {
            "Retry\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Retry\\Tests\\": "tests"
        }
    },
    "scripts": {
        "tests": "phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
